{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-config-airbnb"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "array-type": [
      true,
      "array"
    ],
    "interface-name": false,
    "jsx-no-lambda": false,
    "jsx-self-close": true,
    "max-line-length": [
      true,
      120
    ],
    "member-ordering": false,
    "no-console": false,
    "no-trailing-whitespace": true,
    "object-literal-sort-keys": false,
    "object-shorthand-properties-first": false,
    "ordered-imports": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never",
        "esSpecCompliant": true
      }
    ],
    "variable-name": [
      true,
      "check-format",
      "allow-pascal-case"
    ]
  }
}